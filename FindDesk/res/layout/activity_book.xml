<android.support.v4.widget.DrawerLayout
    	android:id="@+id/book_drawer"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1" >
     
     	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

				<Button 
				    android:id="@+id/book_select"
				    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:text="选择区域"
	    			android:textSize="13sp"
	    			android:background="@null"
	    			android:layout_alignParentLeft="true"
	    			android:textColor="#ff7f00"/>
				<Button
				    android:id="@+id/book_fresh"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@null"
				    android:text="点我刷新"
				   	 android:layout_centerInParent="true"
				    android:textSize="13sp"
				    android:textColor="#ff0000" />
				<Button
				    android:id="@+id/book_friend"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@null"
				    android:text="查看好友"
				    android:textSize="13sp"
				    android:layout_alignParentRight="true"
				    android:textColor="#ff7f00" />
			</RelativeLayout>
     	
     		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">
				<LinearLayout
    				android:layout_width="match_parent"
		    		android:layout_height="match_parent"
		    		android:layout_weight="1"
		    		android:orientation="vertical">
		    		<Button
		    		    android:id="@+id/book_desk1"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk2"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk3"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk4"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
				</LinearLayout>
				
				<LinearLayout
    				android:layout_width="match_parent"
		    		android:layout_height="match_parent"
		    		android:layout_weight="1"
		   		 	android:orientation="vertical">
		    		<Button
		    		    android:id="@+id/book_desk5"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk6"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk7"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk8"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
				</LinearLayout>
			
				<LinearLayout
    				android:layout_width="match_parent"
		    		android:layout_height="match_parent"
		    		android:layout_weight="1"
		    		
		    		android:orientation="vertical">
				</LinearLayout>
			
				<LinearLayout
    				android:layout_width="match_parent"
		    		android:layout_height="match_parent"
		    		android:layout_weight="1"
		    		android:background="@null"
		    		android:orientation="vertical">
		    		<Button
		    		    android:id="@+id/book_desk9"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk10"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk11"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk12"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
				</LinearLayout>
				
				<LinearLayout
    				android:layout_width="match_parent"
		    		android:layout_height="match_parent"
		    		android:layout_weight="1"
		    		android:orientation="vertical">
		    		<Button
		    		    android:id="@+id/book_desk13"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk14"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk15"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:background="@null"
		    			android:text="无人"/>
		    		<Button
		    		    android:id="@+id/book_desk16"
		    		    android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:layout_weight="1"
		    			android:text="无人"
		    			android:background="@null"/>
				</LinearLayout>
    	</LinearLayout>
     	
     	
     	
     	</LinearLayout>

	
    	
		
		
    	<LinearLayout
        	android:layout_width="150dp"
        	android:layout_height="match_parent"
        	android:layout_gravity="start"
        	android:orientation="vertical"
        	android:background="#80ffffff">
        	<Spinner 
        	    android:id="@+id/book_library"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:dropDownWidth="wrap_content"/>
        	<Spinner
        	    android:id="@+id/book_part" 
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:dropDownWidth="wrap_content"/>
        	<Spinner 
        	    android:id="@+id/book_floor"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:dropDownWidth="wrap_content"/>
        	<Spinner 
        	    android:id="@+id/book_column"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:dropDownWidth="wrap_content"/>
    	    
    	</LinearLayout>
    	
    	
    	
</android.support.v4.widget.DrawerLayout>

   