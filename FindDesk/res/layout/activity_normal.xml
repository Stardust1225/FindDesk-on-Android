<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/background1"
	android:clickable="true"
	>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

		<Button
		    android:layout_width="45dp"
		    android:layout_height="45dp"
		    android:background="@drawable/xiaohui"
		    android:clickable="false"/>
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:orientation="vertical"
		    android:layout_centerHorizontal="true">
		<TextView
		    android:id="@+id/normal_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="武汉大学"
		    android:layout_gravity="center"
		    android:textSize="30sp"/>
		<TextView
		    android:id="@+id/normal_state"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_below="@id/normal_title"/>
		</LinearLayout>
		<com.example.finddesk.Roundview
		    android:id="@+id/normal_menu"
		    android:layout_width="45dp"
		    android:layout_height="45dp"
		    android:layout_alignParentRight="true"/>
	</RelativeLayout>
	
	<android.support.v4.view.ViewPager
	    android:layout_marginTop="20dp"
	    android:id="@+id/normal_viewpager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center">
		<android.support.v4.view.PagerTabStrip
		    android:id="@+id/normal_pagertitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top"/>
		    
	    
	</android.support.v4.view.ViewPager>

	
    
</LinearLayout>